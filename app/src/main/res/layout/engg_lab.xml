<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/engg_titl"
            android:text="Engineering Labs"
            android:textSize="20dp"
            android:background="#2732a4"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cs_titl"
            android:text="CSE Lab"
            android:layout_marginTop="20dp"
            android:background="#312f2f"
            android:textSize="15dp"
            android:textColor="#ffffff" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cs"
            android:src="@drawable/cselab"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mae_titl"
            android:text="MAE Lab"
            android:layout_marginTop="15dp"
            android:background="#312f2f"
            android:textSize="15dp"
            android:textColor="#ffffff" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mae"
            android:src="@drawable/maelab"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ee_titl"
            android:text="EEE Lab"
            android:layout_marginTop="15dp"
            android:background="#312f2f"
            android:textSize="15dp"
            android:textColor="#ffffff" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ee"
            android:src="@drawable/eelab"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ece_titl"
            android:text="ECE Lab"
            android:layout_marginTop="15dp"
            android:background="#312f2f"
            android:textSize="15dp"
            android:textColor="#ffffff" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ece"
            android:src="@drawable/ecelab"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv_titl"
            android:text="Civil Lab"
            android:layout_marginTop="15dp"
            android:background="#312f2f"
            android:textSize="15dp"
            android:textColor="#ffffff" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv"
            android:src="@drawable/cvelab"/>

    </LinearLayout>
</ScrollView>